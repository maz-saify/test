<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="default" extends="struts-default">

		<action name="addClient" class="com.zensar.project.actions.AddClientAction">
			<result name="success">client.jsp</result>
			<result name="input">addclient.jsp</result>
		</action>

		<action name="addEmployee" class="com.zensar.project.actions.AddEmployeeAction">
			<result name="success">employee.jsp</result>
			<result name="input">addemployee.jsp</result>
		</action>

		<action name="changePassword" class="com.zensar.project.actions.ChangePasswordAction">
			<result name="input">changepassword.jsp</result>
			<result>changepassword-success.jsp</result>
		</action>
		
		<action name="login" class="com.zensar.project.actions.LoginAction">
			<result name="input">login.jsp</result>
			<result name="error">login.jsp</result>
			<result name="success">login-success.jsp</result>
		</action>
	</package>
</struts>
